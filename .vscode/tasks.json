{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare-environment",
            "type": "shell",
            "command": "make",
            "args": ["db-up", "install", "setup", "migrate"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "stop-database",
            "type": "shell",
            "command": "make",
            "args": ["db-down"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "clean-all",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}

