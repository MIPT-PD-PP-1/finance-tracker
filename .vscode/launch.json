{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Finance Tracker (Make Run)",
            "type": "debugpy",
            "request": "launch",
            "preLaunchTask": "prepare-environment",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env.local",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
}

